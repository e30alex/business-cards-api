{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": false, // breaks moleculer
    "strictFunctionTypes": false, // breaks moleculer
    "noImplicitThis": false, // breaks moleculer
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "../business-cards-client/types",
    "declaration": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
